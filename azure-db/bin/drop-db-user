#!/bin/bash
set +x
set -e

#
# delete a database and user on a remote Azure Postgres server
#

POSTGRES_USER=${POSTGRES_USER:-postgres}
POSTGRES_PORT=${POSTGRES_PORT:-5432}
POSTGRES_HOST=${POSTGRES_HOST:-127.0.0.1}

# check mandatory environment variables
MANDATORY_VARS="POSTGRES_PASSWORD DROP_DATABASE DROP_USER"
for VAR in $MANDATORY_VARS; do
  if [[ -z "${!VAR}" ]]; then
    echo "${VAR} environment variable is empty"
    exit 1
  fi
done

# arobase replacement
PG_URL_ADMIN="postgresql://${POSTGRES_USER/@/%40}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/postgres"
DROP_USER_BASE=${DROP_USER%%@*} || $DROP_USER

echo "deleting user ${DROP_USER_BASE} and database ${DROP_DATABASE} on ${POSTGRES_HOST}"
psql -abe "$PG_URL_ADMIN" -c "SELECT pg_terminate_backend (pg_stat_activity.pid) FROM pg_stat_activity WHERE pg_stat_activity.datname = '${DROP_DATABASE}';"
psql -abe "$PG_URL_ADMIN" -c "DROP DATABASE $DROP_DATABASE;"
psql -abe "$PG_URL_ADMIN" -c "DROP USER $DROP_USER_BASE;"


